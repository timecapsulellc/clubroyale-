rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is a player in the game
    function isPlayerInGame() {
      return request.auth.uid in resource.data.playerIds;
    }
    
    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Games collection - authenticated users can create and participate
    match /games/{gameId} {
      // Anyone authenticated can read games
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a new game
      allow create: if isAuthenticated();
      
      // Authenticated users can update games they're part of
      // Note: Using scores map keys as player IDs since players array is complex
      allow update: if isAuthenticated() && 
        (request.auth.uid in resource.data.scores.keys() ||
         request.auth.uid in request.resource.data.scores.keys());
      
      // Only players in the game can delete
      allow delete: if isAuthenticated() && 
        request.auth.uid in resource.data.scores.keys();
    }
    
    // Ledger/completed games - read-only for authenticated users
    match /ledger/{gameId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }
  }
}

