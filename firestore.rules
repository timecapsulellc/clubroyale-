rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is a player in the game
    function isPlayerInGame() {
      return request.auth.uid in resource.data.playerIds;
    }
    
    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Games collection - authenticated users can create and participate
    match /games/{gameId} {
      // Anyone authenticated can read games
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a new game
      allow create: if isAuthenticated();
      
      // Authenticated users can update games they're part of
      // Note: Using scores map keys as player IDs since players array is complex
      allow update: if isAuthenticated() && 
        (request.auth.uid in resource.data.scores.keys() ||
         request.auth.uid in request.resource.data.scores.keys());
      
      // Only players in the game can delete
      allow delete: if isAuthenticated() && 
        request.auth.uid in resource.data.scores.keys();
    }
    
    // Ledger/completed games - read-only for authenticated users
    match /ledger/{gameId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }
    
    // ===== WALLET SYSTEM RULES =====
    
    // Wallets - users can read their own, only server can write
    match /wallets/{userId} {
      // Users can read their own wallet
      allow read: if isOwner(userId);
      
      // Only the owner can create their wallet (initial setup)
      allow create: if isOwner(userId);
      
      // Updates require validation - prevent negative balance
      allow update: if isOwner(userId) && 
        request.resource.data.balance >= 0;
      
      // Wallets cannot be deleted
      allow delete: if false;
    }
    
    // Transactions - read-only for participants, server writes
    match /transactions/{transactionId} {
      // Users can read transactions they're involved in
      allow read: if isAuthenticated() && 
        (request.auth.uid == resource.data.fromUserId ||
         request.auth.uid == resource.data.toUserId);
      
      // Only server-side (Cloud Functions) can write transactions
      allow write: if false;
    }
    
    // Diamond purchase records - user can read their own
    match /purchases/{purchaseId} {
      allow read: if isAuthenticated() && 
        request.auth.uid == resource.data.userId;
      allow write: if false; // Server-side only via RevenueCat webhook
    }
  }
}

