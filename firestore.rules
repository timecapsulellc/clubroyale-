rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // User profiles - users can only read/write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Games collection - authenticated users can create and participate
    match /games/{gameId} {
      // Anyone authenticated can read games
      allow read: if isAuthenticated();
      
      // Anyone authenticated can create a new game
      allow create: if isAuthenticated();
      
      // Only players in the game can update it
      allow update: if isAuthenticated() && 
        (request.auth.uid in resource.data.players.map(p => p.id) ||
         request.auth.uid in request.resource.data.players.map(p => p.id));
      
      // Only the creator or players can delete
      allow delete: if isAuthenticated() && 
        request.auth.uid in resource.data.players.map(p => p.id);
    }
    
    // Ledger/completed games - read-only for authenticated users
    match /ledger/{gameId} {
      allow read: if isAuthenticated();
      allow write: if false; // Server-side only
    }
  }
}
